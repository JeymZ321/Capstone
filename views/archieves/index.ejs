//DI MAWAWALA UNG NASA DROPDOWN
document.addEventListener("DOMContentLoaded", function () {
        const dropdown = document.getElementById("appointmentDropdown");

        // Check and set the state on page load
        if (localStorage.getItem("dropdownState") === "open") {
            dropdown.classList.add("show"); // Bootstrap's class to keep it open
        }

        // Save the state when the dropdown toggles
        dropdown.addEventListener("shown.bs.collapse", function () {
            localStorage.setItem("dropdownState", "open");
        });

        dropdown.addEventListener("hidden.bs.collapse", function () {
            localStorage.setItem("dropdownState", "closed");
        });
    });

//MAG HIDE NG DROPDOWN IF NAGCLICK OUTSIDE
document.addEventListener("DOMContentLoaded", function() {
    const dropdownElement = document.getElementById("appointmentDropdown");
    const appointmentDropdown = new bootstrap.Collapse(dropdownElement, {
        toggle: false
    });
    
    // Optional: Add listener to close dropdown when clicked outside
    document.addEventListener("click", (event) => {
        if (!dropdownElement.contains(event.target) && !event.target.matches('[data-bs-toggle="collapse"]')) {
            appointmentDropdown.hide();
        }
        });
    });
      
    </script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const viewButtons = document.querySelectorAll('.view-btn');

        viewButtons.forEach(button => {
            button.addEventListener('click', function () {
                // Retrieve data attributes
                const email = this.dataset.email;
                const phonenumber = this.dataset.phonenumber;
                const city = this.dataset.city;
                const datetime = this.dataset.datetime;
                const vehicle = this.dataset.vehicle;
                const carfunc = this.dataset.carfunc;
                const suggestions = this.dataset.suggestions;
                const selectedServices = JSON.parse(this.dataset.selectedServices || '[]');

                // Populate modal content
                document.getElementById('modal-email').textContent = email;
                document.getElementById('modal-phonenumber').textContent = phonenumber;
                document.getElementById('modal-city').textContent = city;
                document.getElementById('modal-datetime').textContent = datetime;
                document.getElementById('modal-vehicle').textContent = vehicle;
                document.getElementById('modal-carfunc').textContent = carfunc;
                document.getElementById('modal-suggestions').textContent = suggestions;

                // Handle Services/Suggestions field
                const servicesField = document.getElementById('services');
                servicesField.value = suggestions || '';

                // Add services and mechanic names to the modal
                const servicesList = document.getElementById('modal-services-list');
                servicesList.innerHTML = ''; // Clear existing services in the modal

                selectedServices.forEach(service => {
                    const serviceItem = document.createElement('div');
                    serviceItem.textContent = `${service.name} - ₱${service.price.toFixed(2)} (Mechanic: ${service.mechanic})`;
                    servicesList.appendChild(serviceItem);
                });
                
            });
        });
    });
