<script>
$(document).ready(function() {
    // Use event delegation to handle clicks on dynamically added buttons
    $('#appointmentTableBody').on('click', '.archive', function() {
        const appointmentId = $(this).data('id');

            if (confirm("Are you sure you want to archive this appointment?")) {
                $.ajax({
                    url: `/appointments/${appointmentId}/archive`,
                    type: 'PATCH',
                    success: function(response) {
                        alert(response.message);
                        location.reload(); // Reload page to reflect changes
                    },
                    error: function(error) {
                        console.error("Error archiving appointment:", error);
                        alert("Failed to archive the appointment. Please try again.");
                    }
                });
            }
    });
    
    // Accept button click event (new function)
    $('.accept-btn').on('click', function() {
    const appointmentId = $(this).data('id');
    $.ajax({
      url: `/appointments/${appointmentId}/accept`,
      type: 'PATCH',
      success: function(response) {
        alert(response.message);
        location.reload(); // Refresh page to show updated appointments
      },
      error: function(error) {
        alert('Error accepting appointment');
        console.error(error);
      }
        });
    });
});




//DI MAWAWALA UNG NASA DROPDOWN
document.addEventListener("DOMContentLoaded", function () {
        const dropdown = document.getElementById("appointmentDropdown");

        // Check and set the state on page load
        if (localStorage.getItem("dropdownState") === "open") {
            dropdown.classList.add("show"); // Bootstrap's class to keep it open
        }

        // Save the state when the dropdown toggles
        dropdown.addEventListener("shown.bs.collapse", function () {
            localStorage.setItem("dropdownState", "open");
        });

        dropdown.addEventListener("hidden.bs.collapse", function () {
            localStorage.setItem("dropdownState", "closed");
        });
    });

    //MAG HIDE NG DROPDOWN IF NAGCLICK OUTSIDE
    document.addEventListener("DOMContentLoaded", function() {
    const dropdownElement = document.getElementById("appointmentDropdown");
    const appointmentDropdown = new bootstrap.Collapse(dropdownElement, {
        toggle: false
    });
    
    // Optional: Add listener to close dropdown when clicked outside
    document.addEventListener("click", (event) => {
        if (!dropdownElement.contains(event.target) && !event.target.matches('[data-bs-toggle="collapse"]')) {
            appointmentDropdown.hide();
        }
        });
    });
</script>

    


