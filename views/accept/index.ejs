    <script>
        $(document).ready(function () {
    // Archive Button Click Handler for Appointments
    $('.archive-btn').on('click', function () {
        const appointmentId = $(this).data('id');

        if (confirm("Are you sure you want to archive this appointment?")) {
            $.ajax({
                url: `/appointments/${appointmentId}/archive`,
                type: 'PATCH',
                success: function (response) {
                    alert(response.message);
                    location.reload(); // Reload to reflect archived appointments
                },
                error: function (error) {
                    console.error("Error archiving appointment:", error);
                    alert("Failed to archive the appointment. Please try again.");
                }
            });
        }
    });
});

    // Archive Button Click Handler for Customers
$('#approvedBody').on('click', '.archive-btn', function () {
    const customerId = $(this).data('id');

    if (confirm("Are you sure you want to archive this customer?")) {
        $.ajax({
            url: `/customer/${customerId}/archive`,
            type: 'PATCH',
            success: function (response) {
                alert(response.message);

                // Remove the archived customer row dynamically
                $(`tr[data-id="${customerId}"]`).remove();
            },
            error: function (error) {
                console.error("Error archiving customer:", error);
                alert("Failed to archive the customer. Please try again.");
            }
        });
    }
});

    // Save Vehicle Button Handler
    $('#saveVehicleButton').on('click', function () {
        const formData = new FormData($('#vehicleForm')[0]); // Use FormData for file uploads

        $.ajax({
            url: '/Newcustomers', // Backend POST route
            type: 'POST',
            data: formData,
            contentType: false, // Required for FormData
            processData: false, // Prevent jQuery from processing data
            success: function (response) {
                if (response.success) {
                    alert('Customer added successfully!');

                    $('#customerModal').modal('hide'); // Close the modal
                } else {
                    alert(`Error: ${response.message}`);
                }
            },
            error: function (error) {
                console.error('Error:', error);
                alert('Failed to add customer. Please try again.');
            }
        });
    });


    
 // Function to preview the selected image
 function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];
            const reader = new FileReader();
            const removeButton = document.getElementById('removeImageButton');

            reader.onload = function() {
                preview.src = reader.result;
                preview.style.display = 'block';
                removeButton.style.display = 'inline-block'; // Show Remove Image button
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                preview.style.display = 'none';
                removeButton.style.display = 'none'; // Hide Remove Image button if no file
            }
        }

        // Function to remove the selected image
        function removeImage() {
            document.getElementById('vehicleImage').value = ''; // Clear file input
            document.getElementById('preview').src = ''; // Clear preview
            document.getElementById('preview').style.display = 'none'; // Hide preview
            document.getElementById('removeImageButton').style.display = 'none'; // Hide Remove Image button
        }


    //DI MAWAWALA UNG NASA DROPDOWN
document.addEventListener("DOMContentLoaded", function () {
        const dropdown = document.getElementById("appointmentDropdown");

        // Check and set the state on page load
        if (localStorage.getItem("dropdownState") === "open") {
            dropdown.classList.add("show"); // Bootstrap's class to keep it open
        }

        // Save the state when the dropdown toggles
        dropdown.addEventListener("shown.bs.collapse", function () {
            localStorage.setItem("dropdownState", "open");
        });

        dropdown.addEventListener("hidden.bs.collapse", function () {
            localStorage.setItem("dropdownState", "closed");
        });
    });


    //MAG HIDE NG DROPDOWN IF NAGCLICK OUTSIDE
    document.addEventListener("DOMContentLoaded", function() {
    const dropdownElement = document.getElementById("appointmentDropdown");
    const appointmentDropdown = new bootstrap.Collapse(dropdownElement, {
        toggle: false
    });
    
    // Optional: Add listener to close dropdown when clicked outside
    document.addEventListener("click", (event) => {
        if (!dropdownElement.contains(event.target) && !event.target.matches('[data-bs-toggle="collapse"]')) {
            appointmentDropdown.hide();
        }
        });
    });

    </script>
